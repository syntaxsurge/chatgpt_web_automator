# ─────────── Browser configuration ───────────
CHROME_PROFILE_DIR=chromedata
HEADLESS_CHROME=false
AUTO_LOGIN=false

# Optional login (only used when AUTO_LOGIN=true)
CHATGPT_EMAIL=jane.doe@example.com
CHATGPT_PASSWORD=superSecret123!

# ─────────── Timing & behaviour ────────────
# normal | fast | paste
TYPING_MODE=paste
EXPLICIT_WAIT_TIMEOUT=15
HUMAN_KEY_DELAY_MIN=0.08
HUMAN_KEY_DELAY_MAX=0.30
STREAM_SETTLE_TIME=0.8
POLL_INTERVAL=0.20

# ─────────── Prompt manipulation ───────────
# delete | keep | merge | merge_post_user_instructions | merge_post_meta
SYSTEM_PROMPT_MODE=merge_post_meta

# ─────────── Chat service ───────────
CHAT_SERVICE_HOST=127.0.0.1
CHAT_SERVICE_PORT=8000
CHAT_SERVICE_RELOAD=false

# ─────────── Debugging ───────────
ENABLE_DEBUG=false